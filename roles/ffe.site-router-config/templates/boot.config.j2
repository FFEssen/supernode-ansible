{% set prefix = site.prefixes | first %}
firewall {
    all-ping enable
    broadcast-ping disable
    ipv6-receive-redirects disable
    ipv6-src-route disable
    ip-src-route disable
    log-martians enable
    modify ROUTE_WITH_TABLE42 {
        rule 10 {
            action modify
            modify {
                table 42
            }
            source {
                address {{ prefix.ipv4 }}
            }
        }
    }
    receive-redirects disable
    send-redirects enable
    source-validation disable
    syn-cookies enable
}
interfaces {
    ethernet eth0 {
        address dhcp
        description Uplink
        duplex auto
        speed auto
    }
    ethernet eth1 {
        duplex auto
        speed auto
    }
    ethernet eth2 {
        duplex auto
        speed auto
    }
    ethernet eth3 {
        duplex auto
        speed auto
    }
    ethernet eth4 {
        address 172.16.{{ site.id }}.1/24
        description Management
        duplex auto
        speed auto
        vif 42 {
            address {{ prefix.ipv4 | ipaddr(1) }}
            address {{ prefix.ipv6 | ipsubnet(64, 0) | ipaddr(1) }}
            description Freifunk
            firewall {
                in {
                    modify ROUTE_WITH_TABLE42
                }
            }
            ipv6 {
                dup-addr-detect-transmits 1
                router-advert {
                    cur-hop-limit 64
                    link-mtu 1364
                    managed-flag false
                    max-interval 20
                    name-server 2001:4860:4860::8888
                    other-config-flag false
                    prefix {{ prefix.ipv6 | ipsubnet(64, 0) }} {
                        autonomous-flag true
                    }
                    send-advert true
                }
            }
        }
    }
    loopback lo {
    }
    openvpn vtun0 {
        config-file /config/openvpn.mgmt.conf
        description Management-VPN
    }
    openvpn vtun1 {
        config-file /config/openvpn.sn-a.ov.lil.conf
        description sn-a.ov.lil
    }
    openvpn vtun2 {
        config-file /config/openvpn.sn-b.ov.lil.conf
        description sn-b.ov.lil
    }
    openvpn vtun3 {
        config-file /config/openvpn.sn-a.ak.ber.conf
        description sn-a.ak.ber
    }
    switch switch0 {
        mtu 1500
    }
}
policy {
    prefix-list sn-in {
        rule 10 {
            action deny
            le 32
            prefix 0.0.0.0/0
        }
    }
    prefix-list sn-out {
        rule 10 {
            action permit
            prefix {{ prefix.ipv4 }}
        }
    }
    prefix-list6 sn-in-ipv6 {
        rule 10 {
            action permit
            prefix ::/0
        }
    }
    prefix-list6 sn-out-ipv6 {
        rule 10 {
            action permit
            prefix {{ prefix.ipv6 | ipsubnet(64, 0) }}
        }
    }
}
protocols {
    bgp 65406 {
        address-family {
            ipv6-unicast {
                network {{ prefix.ipv6 | ipsubnet(64, 0) }} {
                }
            }
        }
        neighbor 100.72.{{ site.id }}.0 {
            nexthop-self
            prefix-list {
                export sn-out
                import sn-in
            }
            remote-as 65406
            soft-reconfiguration {
                inbound
            }
        }
        neighbor 2a03:2260:2007:90{{ site.id }}::1 {
            address-family {
                ipv6-unicast {
                    nexthop-self
                    prefix-list {
                        export sn-out-ipv6
                        import sn-in-ipv6
                    }
                    soft-reconfiguration {
                        inbound
                    }
                }
            }
            description sn-b.ak.ber
            remote-as 65406
        }
        network {{ prefix.ipv4 }} {
        }
        parameters {
            router-id 100.72.{{ site.id }}.1
        }
    }
{% if site.gateway is defined %}
    static {
        route 0.0.0.0/0 {
            next-hop {{ site.gateway }} {
            }
        }
        route 185.66.195.249/32 {
            next-hop {{ site.gateway }} {
            }
        }
        route 216.239.35.0/24 {
            next-hop {{ site.gateway }} {
            }
        }
        route 8.8.4.4/32 {
            next-hop {{ site.gateway }} {
            }
        }
    }
{% endif %}
}
service {
    dhcp-server {
        disabled false
        hostfile-update disable
        shared-network-name Freifunk {
            authoritative disable
            subnet {{ prefix.ipv4 }} {
                default-router {{ prefix.ipv4 | ipaddr(1) | ipaddr('address') }}
                dns-server {{ prefix.ipv4 | ipaddr(1) | ipaddr('address') }}  
                lease 3600
                start {{ prefix.ipv4 | ipaddr(2) | ipaddr('address') }} {
                    stop {{ prefix.ipv4 | ipaddr(254) | ipaddr('address') }}
                }
            }
        }
        shared-network-name MGMT {
            authoritative disable
            subnet 172.16.{{ site.id }}.0/24 {
                default-router 172.16.{{ site.id }}.1
                dns-server 172.16.{{ site.id }}.1
                lease 86400
                start 172.16.{{ site.id }}.100 {
                    stop 172.16.{{ site.id }}.120
                }
            }
        }
    }
    dns {
        forwarding {
            cache-size 10000
            listen-on eth4
            listen-on eth4.42
            name-server 8.8.8.8
        }
    }
    gui {
        https-port 443
    }
    nat {
        rule 5100 {
            outbound-interface eth0
            source {
                address !10.0.0.0/8
            }
            type masquerade
        }
    }
    snmp {
        community ffe {
            authorization ro
            client 172.16.0.1
            client 172.16.0.6
        }
        contact noc@freifunk-essen.de
        listen-address 172.16.{{ site.id }}.1 {
            port 161
        }
        location {{ site.name }}
    }
    ssh {
        disable-password-authentication
        port 22
        protocol-version v2
