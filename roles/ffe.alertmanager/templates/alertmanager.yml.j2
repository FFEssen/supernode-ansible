global:

route:
  group_by: ['alertname','site']
  group_wait: 10s
  group_interval: 5m
  routes:
    - match:
        severity: page
      receiver: page-noc
  receiver: notify-noc
  repeat_interval: 1h

receivers:
- name: 'page-noc'
  pushover_configs:
{% for config in alertmanager.pushover_configs | default([]) %}
    - user_key: {{ config.user_key }}
      token: {{ config.token }}
      expire: 24h
      retry: 1h
{% endfor %}

- name: 'notify-noc'
{% for config in alertmanager.slack_configs | default([]) %}
  slack_configs:
  - send_resolved: true
    api_url: {{ config.api_url }}
    channel: {{ config.channel }} 
    text: |-
{% raw %}
      {{ range .Alerts }}
        *Alert:* {{ .Annotations.summary }}
        *Description:* {{ .Annotations.description }}
        *Details:*
        {{ range .Labels.SortedPairs }} â€¢ *{{ .Name }}:* `{{ .Value }}`
        {{ end }}
      {{ end }}
{% endraw %}

{% endfor %}
